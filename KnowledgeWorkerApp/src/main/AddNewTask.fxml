<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.AddNewTaskController">
    <children>
        <TextField fx:id="taskNameTxt" layoutX="238.0" layoutY="103.0" />
        <TextField fx:id="descTxt" layoutX="238.0" layoutY="142.0" prefHeight="63.0" prefWidth="324.0" promptText="What is your task about?" />
        <Text layoutX="139.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Task Name" />
        <Text layoutX="138.0" layoutY="178.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Description" />
        <Text layoutX="139.0" layoutY="238.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Task Priority" />
        <DatePicker fx:id="doDateTxt" layoutX="136.0" layoutY="266.0" promptText="Enter Do Date" />
        <DatePicker fx:id="dueDateTxt" layoutX="345.0" layoutY="266.0" promptText="Enter Due Date" />
        <Text layoutX="227.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="CREATE TASK">
            <font>
                <Font name="System Bold" size="23.0" />
            </font>
        </Text>
        <Button fx:id="btnAddTask" layoutX="497.0" layoutY="351.0" mnemonicParsing="false" onAction="#handleCheckUserInput" text="Add Task" />
